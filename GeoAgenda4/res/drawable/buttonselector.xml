<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESS -->
    <item 
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dashboard_selected_color" />

            <corners 
                android:bottomLeftRadius="9dp" 
                android:bottomRightRadius="9dp" 
                android:topLeftRadius="9dp" 
                android:topRightRadius="9dp" />
        </shape></item>

    <!-- FOCUS -->
    <item 
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF684D" />

            <corners 
                android:bottomLeftRadius="9dp" 
                android:bottomRightRadius="9dp" 
                android:topLeftRadius="9dp" 
                android:topRightRadius="9dp" />
        </shape>
        
    </item>

    <!-- SELECTED -->
    <item 
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF7FED" />

            <corners 
                android:bottomLeftRadius="9dp" 
                android:bottomRightRadius="9dp" 
                android:topLeftRadius="9dp" 
                android:topRightRadius="9dp" />
        </shape>
        
    </item>

    <!-- DEFAULT -->
    <item android:drawable="@android:color/transparent"/>

</selector>